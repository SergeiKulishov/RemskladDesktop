<Window x:Class="RemskladDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemskladDesktop" xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.183"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ScrollViewer Margin="164,114,0,0" >
            <ListView x:Name="ItemList" FontWeight="Normal" Background="White" Foreground="#FF080808" Height="auto" Width="auto" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding article}" Width="auto" Header="Артикул"/>
                        <GridViewColumn DisplayMemberBinding="{Binding title}" Width="auto" Header="Наименование"/>
                        <GridViewColumn DisplayMemberBinding="{Binding residue}" Width="auto" Header="Остаток на складе"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>
        <Button Content="Аккумуляторы" HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top" Width="149" Click="Button_Accums" x:Name="DispAccumsButton"/>
        <Button Content="Дисплеи(Оригинал)" HorizontalAlignment="Left" Margin="10,141,0,0" VerticalAlignment="Top" Width="149" Click="Button_DispOrig" x:Name="DispOrigButton"/>
        <Button Content="Дисплеи(Копия)" HorizontalAlignment="Left" Margin="10,166,0,0" VerticalAlignment="Top" Width="149" Click="Button_DispCopy" x:Name="DispCopyButton"/>
        <TextBlock Text="RemSklad" TextWrapping="Wrap" Margin="298,10,188,337" FontSize="60" Foreground="#FFB6B6B6"/>
        <Button Content="Обновить БД" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Click="UpdateDB" x:Name="UpdateButton"/>
        <Button Content="Создать БД" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" Click="CreateDB" x:Name="CreateButton"/>
        <Button Content="Основные камеры" HorizontalAlignment="Left" Margin="10,191,0,0" VerticalAlignment="Top" Width="149" Click="Button_MainCameras" x:Name="MainCamerasButton"/>
    </Grid>
</Window>
