<Window x:Class="RemskladDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemskladDesktop" xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.183"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ScrollViewer Margin="164,114,0,0" >
            <ListView x:Name="phonesList" ItemsSource="{DynamicResource ResourceKey=phones}" SelectionChanged="phonesList_SelectionChanged" FontWeight="Normal" Background="White" Foreground="#FF080808" Height="auto" Width="auto" >
                <ListView.Resources>
                    <col:ArrayList x:Key="phones">
                        <local:Phone Title="Дисплейный модуль iPhone 6S" Company="Apple" Price="54990" />
                        <local:Phone Title="Lumia 950" Company="Microsoft" Price="39990" />
                        <local:Phone Title="Nexus 5X" Company="Google" Price="29990" />
                        <local:Phone Title = "Galaxy Edge" Company = "Samsung" Price = "45670" />
                    </col:ArrayList>
                </ListView.Resources>
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Title}" Width="auto" Header="Модель"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Company}" Width="auto" Header="Компания"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Price}" Width="auto" Header="Цена"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top" Width="149"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,141,0,0" VerticalAlignment="Top" Width="149"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,166,0,0" VerticalAlignment="Top" Width="149"/>
        <TextBlock Text="RemSklad" TextWrapping="Wrap" Margin="298,10,188,337" FontSize="60" Foreground="#FFB6B6B6"/>
    </Grid>
</Window>
